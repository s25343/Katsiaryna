#include <iostream>
#include <string>

using namespace std;

int main()
{
    string names[5] = { "Hello", "world", "in   ", "a    ", "box  " };

    for (int i = 0; i < 4; i++){
    cout << "* ";
    }

    cout << endl;

    for (int i=0; i<5; i++){
        cout << "*" << names[i] << "*" << endl;
    }

     for (int i = 0; i < 4; i++){
    cout << "* ";
    }

    return 0;
}
