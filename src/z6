#include <iostream> 

using namespace std;

int is_divisible(int a, int b)
{
   if(a%b==0) 
      return true;
   else
      return false;
}
int is_even(int a)
{
        if(is_divisible(a, 2) == 1)
        return true;
        else
        return false;
}
int main()
{
   int licznik;
        cout<<"Podaj licznik";
        cin>>licznik;
        cout<<is_even(licznik);
        cout << "\n";
   return 0;
}


